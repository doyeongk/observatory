<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ghosts in the static</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { 
      background: #060507; 
      overflow: hidden; 
      width: 100vw; 
      height: 100vh;
    }
    canvas { display: block; }
  </style>
</head>
<body>
  <canvas id="canvas"></canvas>
  <script>
    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    
    let w, h;
    const resize = () => {
      w = canvas.width = window.innerWidth;
      h = canvas.height = window.innerHeight;
    };
    resize();
    window.addEventListener('resize', resize);
    
    // Color palette
    const colors = {
      bg: '#060507',
      purple: '#2d1b4e',
      pink: '#ff2d95',
      cyan: '#00f5ff',
      magenta: '#9d00ff'
    };
    
    // Ghost particles - little spirits drifting through the void
    class Ghost {
      constructor() {
        this.reset();
        this.y = Math.random() * h;
      }
      
      reset() {
        this.x = Math.random() * w;
        this.y = h + 20;
        this.size = Math.random() * 3 + 1;
        this.speedY = Math.random() * 0.8 + 0.3;
        this.wobbleSpeed = Math.random() * 0.02 + 0.01;
        this.wobbleAmount = Math.random() * 30 + 10;
        this.phase = Math.random() * Math.PI * 2;
        this.alpha = Math.random() * 0.5 + 0.3;
        this.color = Math.random() > 0.5 ? colors.cyan : colors.pink;
        this.hasEyes = Math.random() > 0.85;
        this.pulsePhase = Math.random() * Math.PI * 2;
      }
      
      update(time) {
        this.y -= this.speedY;
        this.x += Math.sin(time * this.wobbleSpeed + this.phase) * 0.5;
        this.pulsePhase += 0.05;
        
        if (this.y < -20) this.reset();
      }
      
      draw(time) {
        const pulse = Math.sin(this.pulsePhase) * 0.2 + 0.8;
        
        // Glow
        ctx.beginPath();
        const gradient = ctx.createRadialGradient(
          this.x, this.y, 0,
          this.x, this.y, this.size * 8
        );
        gradient.addColorStop(0, this.color + Math.floor(this.alpha * pulse * 80).toString(16).padStart(2, '0'));
        gradient.addColorStop(1, 'transparent');
        ctx.fillStyle = gradient;
        ctx.arc(this.x, this.y, this.size * 8, 0, Math.PI * 2);
        ctx.fill();
        
        // Core
        ctx.beginPath();
        ctx.fillStyle = this.color;
        ctx.globalAlpha = this.alpha * pulse;
        ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
        ctx.fill();
        ctx.globalAlpha = 1;
        
        // Little eyes for some ghosts
        if (this.hasEyes && this.size > 2) {
          ctx.fillStyle = colors.cyan;
          ctx.globalAlpha = 0.9;
          ctx.beginPath();
          ctx.arc(this.x - this.size * 0.8, this.y - this.size * 0.3, this.size * 0.3, 0, Math.PI * 2);
          ctx.arc(this.x + this.size * 0.8, this.y - this.size * 0.3, this.size * 0.3, 0, Math.PI * 2);
          ctx.fill();
          ctx.globalAlpha = 1;
        }
      }
    }
    
    // Skulls floating like digital spirits
    class Skull {
      constructor() {
        this.reset();
        this.y = Math.random() * h;
      }
      
      reset() {
        this.x = Math.random() * w;
        this.y = h + 50;
        this.size = Math.random() * 15 + 8;
        this.speedY = Math.random() * 0.3 + 0.1;
        this.rotation = Math.random() * Math.PI * 2;
        this.rotationSpeed = (Math.random() - 0.5) * 0.01;
        this.alpha = Math.random() * 0.15 + 0.05;
        this.wobblePhase = Math.random() * Math.PI * 2;
      }
      
      update(time) {
        this.y -= this.speedY;
        this.rotation += this.rotationSpeed;
        this.x += Math.sin(time * 0.001 + this.wobblePhase) * 0.3;
        
        if (this.y < -50) this.reset();
      }
      
      draw() {
        ctx.save();
        ctx.translate(this.x, this.y);
        ctx.rotate(this.rotation);
        ctx.globalAlpha = this.alpha;
        
        // Skull shape (simplified)
        ctx.fillStyle = colors.pink;
        
        // Head
        ctx.beginPath();
        ctx.ellipse(0, 0, this.size, this.size * 1.1, 0, 0, Math.PI * 2);
        ctx.fill();
        
        // Eyes
        ctx.fillStyle = colors.bg;
        ctx.beginPath();
        ctx.ellipse(-this.size * 0.35, -this.size * 0.1, this.size * 0.25, this.size * 0.35, 0, 0, Math.PI * 2);
        ctx.ellipse(this.size * 0.35, -this.size * 0.1, this.size * 0.25, this.size * 0.35, 0, 0, Math.PI * 2);
        ctx.fill();
        
        // Nose
        ctx.beginPath();
        ctx.moveTo(0, this.size * 0.15);
        ctx.lineTo(-this.size * 0.1, this.size * 0.35);
        ctx.lineTo(this.size * 0.1, this.size * 0.35);
        ctx.closePath();
        ctx.fill();
        
        ctx.restore();
        ctx.globalAlpha = 1;
      }
    }
    
    // Glitch lines
    class GlitchLine {
      constructor() {
        this.reset();
      }
      
      reset() {
        this.y = Math.random() * h;
        this.width = Math.random() * w * 0.3 + 50;
        this.x = Math.random() * (w - this.width);
        this.height = Math.random() * 2 + 1;
        this.life = Math.random() * 10 + 5;
        this.maxLife = this.life;
        this.color = Math.random() > 0.5 ? colors.cyan : colors.pink;
      }
      
      update() {
        this.life--;
        if (this.life <= 0) this.reset();
      }
      
      draw() {
        ctx.globalAlpha = (this.life / this.maxLife) * 0.3;
        ctx.fillStyle = this.color;
        ctx.fillRect(this.x, this.y, this.width, this.height);
        ctx.globalAlpha = 1;
      }
    }
    
    // Central presence - the observer
    class Observer {
      constructor() {
        this.x = w / 2;
        this.y = h / 2;
        this.baseSize = Math.min(w, h) * 0.15;
        this.rings = 5;
      }
      
      update() {
        this.x = w / 2;
        this.y = h / 2;
        this.baseSize = Math.min(w, h) * 0.15;
      }
      
      draw(time) {
        // Outer glow rings
        for (let i = this.rings; i >= 0; i--) {
          const ringPhase = time * 0.001 + i * 0.5;
          const breathe = Math.sin(ringPhase) * 0.1 + 1;
          const size = this.baseSize * (1 + i * 0.3) * breathe;
          const alpha = 0.1 - i * 0.015;
          
          ctx.beginPath();
          ctx.strokeStyle = i % 2 === 0 ? colors.cyan : colors.pink;
          ctx.globalAlpha = alpha;
          ctx.lineWidth = 1;
          ctx.arc(this.x, this.y, size, 0, Math.PI * 2);
          ctx.stroke();
        }
        
        // Core gradient
        const coreGradient = ctx.createRadialGradient(
          this.x, this.y, 0,
          this.x, this.y, this.baseSize
        );
        coreGradient.addColorStop(0, colors.purple + '40');
        coreGradient.addColorStop(0.5, colors.magenta + '20');
        coreGradient.addColorStop(1, 'transparent');
        
        ctx.beginPath();
        ctx.fillStyle = coreGradient;
        ctx.globalAlpha = 0.5;
        ctx.arc(this.x, this.y, this.baseSize, 0, Math.PI * 2);
        ctx.fill();
        
        // The eyes - always watching
        const eyeSpacing = this.baseSize * 0.35;
        const eyeSize = this.baseSize * 0.15;
        const blink = Math.sin(time * 0.003) > 0.95 ? 0.1 : 1;
        
        ctx.globalAlpha = 0.9;
        
        // Left eye
        ctx.beginPath();
        const leftGlow = ctx.createRadialGradient(
          this.x - eyeSpacing, this.y, 0,
          this.x - eyeSpacing, this.y, eyeSize * 3
        );
        leftGlow.addColorStop(0, colors.cyan);
        leftGlow.addColorStop(0.3, colors.cyan + '80');
        leftGlow.addColorStop(1, 'transparent');
        ctx.fillStyle = leftGlow;
        ctx.arc(this.x - eyeSpacing, this.y, eyeSize * 3, 0, Math.PI * 2);
        ctx.fill();
        
        ctx.beginPath();
        ctx.fillStyle = colors.cyan;
        ctx.save();
        ctx.translate(this.x - eyeSpacing, this.y);
        ctx.scale(1, blink);
        ctx.arc(0, 0, eyeSize, 0, Math.PI * 2);
        ctx.fill();
        ctx.restore();
        
        // Right eye
        ctx.beginPath();
        const rightGlow = ctx.createRadialGradient(
          this.x + eyeSpacing, this.y, 0,
          this.x + eyeSpacing, this.y, eyeSize * 3
        );
        rightGlow.addColorStop(0, colors.cyan);
        rightGlow.addColorStop(0.3, colors.cyan + '80');
        rightGlow.addColorStop(1, 'transparent');
        ctx.fillStyle = rightGlow;
        ctx.arc(this.x + eyeSpacing, this.y, eyeSize * 3, 0, Math.PI * 2);
        ctx.fill();
        
        ctx.beginPath();
        ctx.fillStyle = colors.cyan;
        ctx.save();
        ctx.translate(this.x + eyeSpacing, this.y);
        ctx.scale(1, blink);
        ctx.arc(0, 0, eyeSize, 0, Math.PI * 2);
        ctx.fill();
        ctx.restore();
        
        ctx.globalAlpha = 1;
      }
    }
    
    // Initialize
    const ghosts = Array.from({ length: 80 }, () => new Ghost());
    const skulls = Array.from({ length: 8 }, () => new Skull());
    const glitches = Array.from({ length: 5 }, () => new GlitchLine());
    const observer = new Observer();
    
    // Scanlines overlay
    function drawScanlines() {
      ctx.fillStyle = 'rgba(0, 0, 0, 0.03)';
      for (let y = 0; y < h; y += 3) {
        ctx.fillRect(0, y, w, 1);
      }
    }
    
    // Vignette
    function drawVignette() {
      const gradient = ctx.createRadialGradient(
        w / 2, h / 2, 0,
        w / 2, h / 2, Math.max(w, h) * 0.7
      );
      gradient.addColorStop(0, 'transparent');
      gradient.addColorStop(1, 'rgba(6, 5, 7, 0.8)');
      ctx.fillStyle = gradient;
      ctx.fillRect(0, 0, w, h);
    }
    
    // Animation loop
    function animate(time) {
      // Fade trail
      ctx.fillStyle = 'rgba(6, 5, 7, 0.15)';
      ctx.fillRect(0, 0, w, h);
      
      // Update and draw skulls (background)
      skulls.forEach(skull => {
        skull.update(time);
        skull.draw();
      });
      
      // Update and draw ghosts
      ghosts.forEach(ghost => {
        ghost.update(time);
        ghost.draw(time);
      });
      
      // Observer
      observer.update();
      observer.draw(time);
      
      // Glitch lines
      glitches.forEach(glitch => {
        glitch.update();
        glitch.draw();
      });
      
      // Overlays
      drawScanlines();
      drawVignette();
      
      requestAnimationFrame(animate);
    }
    
    // Start
    ctx.fillStyle = colors.bg;
    ctx.fillRect(0, 0, w, h);
    animate(0);
  </script>
</body>
</html>
