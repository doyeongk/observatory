<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>静 — Stillness</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Spectral:ital,wght@0,200;1,200&display=swap" rel="stylesheet">
  <style>
    *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }

    :root {
      --void: #07070d;
      --gold: #c4903a;
      --gold-60: rgba(196, 144, 58, 0.6);
      --gold-20: rgba(196, 144, 58, 0.2);
      --gold-08: rgba(196, 144, 58, 0.08);
      --gold-04: rgba(196, 144, 58, 0.04);
    }

    html, body {
      width: 100%; height: 100%;
      background: var(--void);
      overflow: hidden;
    }

    /* Deep ambient radial — barely-there indigo center */
    .ambient {
      position: fixed; inset: 0;
      background: radial-gradient(
        ellipse 50% 50% at 50% 48%,
        rgba(16, 13, 28, 1) 0%,
        var(--void) 100%
      );
    }

    /* Grain overlay via SVG turbulence */
    .grain {
      position: fixed; inset: 0;
      pointer-events: none;
      z-index: 90;
      mix-blend-mode: overlay;
      opacity: 0.5;
    }
    .grain svg { width: 100%; height: 100%; display: block; }

    /* Particle field */
    #motes {
      position: fixed; inset: 0;
      z-index: 1;
    }

    /* Enso SVG */
    .enso-wrap {
      position: fixed; inset: 0;
      display: flex; align-items: center; justify-content: center;
      z-index: 10;
    }
    .enso-svg {
      width: min(65vmin, 380px);
      height: min(65vmin, 380px);
    }

    /* Three-layer stroke: ambient glow → mid glow → sharp line */
    .enso-ambient, .enso-mid, .enso-sharp {
      fill: none;
      stroke-linecap: round;
      stroke-dasharray: var(--path-len);
      stroke-dashoffset: var(--path-len);
    }
    .enso-ambient {
      stroke: var(--gold-08);
      stroke-width: 32;
      filter: url(#blur-wide);
    }
    .enso-mid {
      stroke: var(--gold-20);
      stroke-width: 8;
      filter: url(#blur-tight);
    }
    .enso-sharp {
      stroke: var(--gold);
      stroke-width: 2.2;
      filter: drop-shadow(0 0 3px var(--gold-60));
    }

    /* Inner space glow — appears when circle is drawn */
    .inner-glow {
      opacity: 0;
      transition: opacity 2s ease;
    }

    /* Kanji */
    .kanji {
      position: fixed;
      bottom: 14%;
      left: 50%;
      transform: translateX(-50%);
      font-size: clamp(1.4rem, 3vmin, 2rem);
      color: var(--gold-08);
      letter-spacing: 0.4em;
      z-index: 20;
      opacity: 0;
      transition: opacity 2s ease;
      user-select: none;
    }

    /* Subtitle */
    .subtitle {
      position: fixed;
      bottom: 9%;
      left: 50%;
      transform: translateX(-50%);
      font-family: 'Spectral', serif;
      font-style: italic;
      font-weight: 200;
      font-size: clamp(0.6rem, 1.2vmin, 0.85rem);
      color: rgba(196, 144, 58, 0.06);
      letter-spacing: 0.35em;
      text-transform: lowercase;
      z-index: 20;
      opacity: 0;
      transition: opacity 2.5s ease;
      user-select: none;
    }
  </style>
</head>
<body>
  <div class="ambient"></div>

  <!-- Film grain -->
  <div class="grain">
    <svg xmlns="http://www.w3.org/2000/svg">
      <filter id="grain-filter">
        <feTurbulence type="fractalNoise" baseFrequency="0.7" numOctaves="4" stitchTiles="stitch"/>
        <feColorMatrix type="saturate" values="0"/>
      </filter>
      <rect width="100%" height="100%" filter="url(#grain-filter)" opacity="0.08"/>
    </svg>
  </div>

  <!-- Dust motes -->
  <canvas id="motes"></canvas>

  <!-- Enso -->
  <div class="enso-wrap">
    <svg class="enso-svg" viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <filter id="blur-wide"><feGaussianBlur stdDeviation="14"/></filter>
        <filter id="blur-tight"><feGaussianBlur stdDeviation="4"/></filter>
        <radialGradient id="inner-grad" cx="50%" cy="50%" r="38%">
          <stop offset="0%" stop-color="rgba(196,144,58,0.03)"/>
          <stop offset="100%" stop-color="rgba(196,144,58,0)"/>
        </radialGradient>
      </defs>
      <!-- Inner space glow -->
      <circle class="inner-glow" cx="200" cy="200" r="140" fill="url(#inner-grad)"/>
      <!-- Enso strokes (all same path, different weights) -->
      <path class="enso-ambient" d="M 208 55 C 298 46, 362 118, 355 208 C 348 298, 278 362, 192 354 C 106 346, 44 274, 52 192 C 60 110, 122 52, 192 58"/>
      <path class="enso-mid"     d="M 208 55 C 298 46, 362 118, 355 208 C 348 298, 278 362, 192 354 C 106 346, 44 274, 52 192 C 60 110, 122 52, 192 58"/>
      <path class="enso-sharp"   d="M 208 55 C 298 46, 362 118, 355 208 C 348 298, 278 362, 192 354 C 106 346, 44 274, 52 192 C 60 110, 122 52, 192 58"/>
    </svg>
  </div>

  <div class="kanji">静</div>
  <div class="subtitle">saturday morning</div>

  <script>
    // --- Particles (dust motes) ---
    const canvas = document.getElementById('motes');
    const ctx = canvas.getContext('2d');
    let W, H;

    function resize() {
      W = canvas.width = window.innerWidth;
      H = canvas.height = window.innerHeight;
    }
    resize();
    window.addEventListener('resize', resize);

    const MOTE_COUNT = 35;
    const motes = Array.from({ length: MOTE_COUNT }, () => ({
      x: Math.random() * W,
      y: Math.random() * H,
      r: Math.random() * 1.2 + 0.3,
      vx: (Math.random() - 0.5) * 0.12,
      vy: -(Math.random() * 0.18 + 0.03),
      phase: Math.random() * Math.PI * 2,
      speed: Math.random() * 0.004 + 0.001,
      baseAlpha: Math.random() * 0.25 + 0.04,
    }));

    function drawMotes() {
      ctx.clearRect(0, 0, W, H);
      for (const m of motes) {
        m.x += m.vx;
        m.y += m.vy;
        m.phase += m.speed;
        if (m.y < -10) { m.y = H + 10; m.x = Math.random() * W; }
        if (m.x < -10) m.x = W + 10;
        if (m.x > W + 10) m.x = -10;
        const a = m.baseAlpha * (0.4 + 0.6 * Math.sin(m.phase));
        ctx.beginPath();
        ctx.arc(m.x, m.y, m.r, 0, Math.PI * 2);
        ctx.fillStyle = `rgba(196,144,58,${a.toFixed(3)})`;
        ctx.fill();
      }
      requestAnimationFrame(drawMotes);
    }
    drawMotes();

    // --- Enso animation ---
    const paths = document.querySelectorAll('.enso-ambient, .enso-mid, .enso-sharp');
    const innerGlow = document.querySelector('.inner-glow');
    const kanji = document.querySelector('.kanji');
    const subtitle = document.querySelector('.subtitle');

    // Measure path length and set CSS variable
    const pathLen = paths[0].getTotalLength();
    paths.forEach(p => {
      p.style.setProperty('--path-len', pathLen);
      p.style.strokeDasharray = pathLen;
      p.style.strokeDashoffset = pathLen;
    });

    // Easing: sine ease-in-out
    function easeInOutSine(t) {
      return -(Math.cos(Math.PI * t) - 1) / 2;
    }

    // Cycle: draw 9s → hold 6s → fade 4s → rest 4s = 23s total
    const DRAW = 9000, HOLD = 6000, FADE = 4000, REST = 4000;
    const CYCLE = DRAW + HOLD + FADE + REST;

    function animateEnso(timestamp) {
      const t = timestamp % CYCLE;

      if (t < DRAW) {
        // Drawing phase
        const progress = easeInOutSine(t / DRAW);
        const offset = pathLen * (1 - progress);
        paths.forEach((p, i) => {
          // Ambient leads slightly
          const lead = i === 0 ? 0.04 : i === 1 ? 0.015 : 0;
          const adj = pathLen * (1 - Math.min(1, easeInOutSine(Math.min(1, t / DRAW + lead))));
          p.style.strokeDashoffset = adj;
          p.style.opacity = 1;
        });
        // Inner glow fades in during last 40% of draw
        const glowStart = DRAW * 0.6;
        if (t > glowStart) {
          innerGlow.style.opacity = (t - glowStart) / (DRAW - glowStart);
        } else {
          innerGlow.style.opacity = 0;
        }
        kanji.style.opacity = Math.max(0, (t - DRAW * 0.7) / (DRAW * 0.3));
        subtitle.style.opacity = Math.max(0, (t - DRAW * 0.8) / (DRAW * 0.2)) * 0.6;
      } else if (t < DRAW + HOLD) {
        // Holding — gentle pulse
        const ht = (t - DRAW) / HOLD;
        const pulse = 0.92 + 0.08 * Math.sin(ht * Math.PI * 3);
        paths.forEach(p => {
          p.style.strokeDashoffset = 0;
          p.style.opacity = pulse;
        });
        innerGlow.style.opacity = 0.6 + 0.4 * Math.sin(ht * Math.PI * 2);
        kanji.style.opacity = 1;
        subtitle.style.opacity = 0.6;
      } else if (t < DRAW + HOLD + FADE) {
        // Fading out
        const ft = (t - DRAW - HOLD) / FADE;
        const fade = 1 - easeInOutSine(ft);
        paths.forEach(p => {
          p.style.strokeDashoffset = 0;
          p.style.opacity = fade;
        });
        innerGlow.style.opacity = fade * 0.8;
        kanji.style.opacity = fade;
        subtitle.style.opacity = fade * 0.6;
      } else {
        // Resting — everything hidden, reset stroke
        paths.forEach(p => {
          p.style.opacity = 0;
          p.style.strokeDashoffset = pathLen;
        });
        innerGlow.style.opacity = 0;
        kanji.style.opacity = 0;
        subtitle.style.opacity = 0;
      }

      requestAnimationFrame(animateEnso);
    }
    requestAnimationFrame(animateEnso);
  </script>
</body>
</html>
