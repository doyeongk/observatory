<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>frequency ghost</title>
<style>
* { margin: 0; padding: 0; box-sizing: border-box; }
body { 
  background: #000; 
  overflow: hidden; 
  cursor: crosshair;
}
canvas { 
  display: block; 
  image-rendering: pixelated;
}
#crt {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  pointer-events: none;
  background: 
    repeating-linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.15) 0px,
      rgba(0, 0, 0, 0.15) 1px,
      transparent 1px,
      transparent 2px
    );
  z-index: 10;
}
#vignette {
  position: fixed;
  top: 0; left: 0;
  width: 100%; height: 100%;
  pointer-events: none;
  background: radial-gradient(ellipse at center, transparent 40%, rgba(0,0,0,0.8) 100%);
  z-index: 11;
}
#start {
  position: fixed;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  color: #0ff;
  font-family: monospace;
  font-size: 14px;
  text-align: center;
  z-index: 20;
  text-shadow: 0 0 10px #0ff;
  animation: pulse 1.5s ease-in-out infinite;
}
@keyframes pulse {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}
</style>
</head>
<body>
<canvas id="c"></canvas>
<div id="crt"></div>
<div id="vignette"></div>
<div id="start">[ click to initialize audio ]</div>

<script>
const canvas = document.getElementById('c');
const ctx = canvas.getContext('2d');
const startEl = document.getElementById('start');

let w, h;
let audioCtx, osc1, osc2, gain;
let mouseX = 0.5, mouseY = 0.5;
let audioStarted = false;

// Lissajous history for trail effect
const history = [];
const historyLength = 2000;

// Frequency ratios that create interesting patterns
const ratios = [
  [1, 1], [1, 2], [2, 3], [3, 4], [3, 5], [4, 5], [5, 6], [5, 7], [7, 8]
];
let currentRatio = 0;
let ratioTimer = 0;
let phase = 0;

function resize() {
  w = canvas.width = window.innerWidth;
  h = canvas.height = window.innerHeight;
}

function initAudio() {
  if (audioStarted) return;
  audioStarted = true;
  startEl.style.display = 'none';
  
  audioCtx = new (window.AudioContext || window.webkitAudioContext)();
  
  // Two oscillators for X and Y
  osc1 = audioCtx.createOscillator();
  osc2 = audioCtx.createOscillator();
  gain = audioCtx.createGain();
  
  osc1.type = 'sine';
  osc2.type = 'sine';
  gain.gain.value = 0.03; // quiet
  
  // Analyzer for getting waveform data
  window.analyserX = audioCtx.createAnalyser();
  window.analyserY = audioCtx.createAnalyser();
  analyserX.fftSize = 2048;
  analyserY.fftSize = 2048;
  
  osc1.connect(analyserX);
  osc2.connect(analyserY);
  osc1.connect(gain);
  osc2.connect(gain);
  gain.connect(audioCtx.destination);
  
  osc1.start();
  osc2.start();
}

function updateFrequencies() {
  if (!audioStarted) return;
  
  // Base frequency affected by mouse Y
  const baseFreq = 100 + mouseY * 300;
  
  // Get current ratio
  const [r1, r2] = ratios[currentRatio];
  
  // Apply ratio for Lissajous pattern
  osc1.frequency.setTargetAtTime(baseFreq * r1, audioCtx.currentTime, 0.1);
  osc2.frequency.setTargetAtTime(baseFreq * r2, audioCtx.currentTime, 0.1);
}

function getLissajousPoint(t) {
  if (!audioStarted) {
    // Demo mode before audio
    const [r1, r2] = ratios[currentRatio];
    const baseFreq = 2;
    const x = Math.sin(t * baseFreq * r1 + phase);
    const y = Math.sin(t * baseFreq * r2);
    return { x, y };
  }
  
  // Get actual audio data
  const bufferLength = analyserX.fftSize;
  const dataX = new Float32Array(bufferLength);
  const dataY = new Float32Array(bufferLength);
  analyserX.getFloatTimeDomainData(dataX);
  analyserY.getFloatTimeDomainData(dataY);
  
  // Sample at position based on t
  const idx = Math.floor((t % 1) * bufferLength);
  return {
    x: dataX[idx] || 0,
    y: dataY[idx] || 0
  };
}

function draw(timestamp) {
  // Fade effect
  ctx.fillStyle = 'rgba(0, 0, 0, 0.08)';
  ctx.fillRect(0, 0, w, h);
  
  const cx = w / 2;
  const cy = h / 2;
  const scale = Math.min(w, h) * 0.35;
  
  // Update ratio periodically
  ratioTimer++;
  if (ratioTimer > 500) {
    ratioTimer = 0;
    currentRatio = (currentRatio + 1) % ratios.length;
    updateFrequencies();
  }
  
  // Phase shift for animation
  phase += 0.02 + mouseX * 0.03;
  
  // Draw multiple samples
  const samples = 150;
  const t = timestamp * 0.001;
  
  for (let i = 0; i < samples; i++) {
    const sampleT = t + i * 0.02;
    const point = getLissajousPoint(sampleT);
    
    const x = cx + point.x * scale;
    const y = cy + point.y * scale;
    
    // Add to history
    history.push({ x, y, age: 0 });
    if (history.length > historyLength) history.shift();
  }
  
  // Draw history with gradient
  for (let i = 0; i < history.length; i++) {
    const p = history[i];
    p.age++;
    
    const life = 1 - (p.age / historyLength);
    if (life <= 0) continue;
    
    // Color shifts based on position
    const hue = (p.x / w) * 60 + 280; // purple to pink range
    const lightness = 50 + life * 30;
    
    // Cyan core, pink edges
    const distFromCenter = Math.sqrt((p.x - cx) ** 2 + (p.y - cy) ** 2) / scale;
    const isCyan = distFromCenter < 0.5;
    
    if (isCyan) {
      ctx.fillStyle = `hsla(180, 100%, ${lightness}%, ${life * 0.8})`;
    } else {
      ctx.fillStyle = `hsla(${hue}, 100%, ${lightness}%, ${life * 0.6})`;
    }
    
    const size = life * 2.5;
    ctx.beginPath();
    ctx.arc(p.x, p.y, size, 0, Math.PI * 2);
    ctx.fill();
  }
  
  // Bright current point
  const current = getLissajousPoint(t);
  const currentX = cx + current.x * scale;
  const currentY = cy + current.y * scale;
  
  // Glow
  const gradient = ctx.createRadialGradient(currentX, currentY, 0, currentX, currentY, 20);
  gradient.addColorStop(0, 'rgba(0, 255, 255, 0.8)');
  gradient.addColorStop(0.5, 'rgba(255, 0, 255, 0.3)');
  gradient.addColorStop(1, 'transparent');
  ctx.fillStyle = gradient;
  ctx.beginPath();
  ctx.arc(currentX, currentY, 20, 0, Math.PI * 2);
  ctx.fill();
  
  // Core
  ctx.fillStyle = '#fff';
  ctx.beginPath();
  ctx.arc(currentX, currentY, 3, 0, Math.PI * 2);
  ctx.fill();
  
  // Frequency display
  if (audioStarted) {
    const [r1, r2] = ratios[currentRatio];
    ctx.fillStyle = 'rgba(0, 255, 255, 0.4)';
    ctx.font = '12px monospace';
    ctx.fillText(`ratio ${r1}:${r2}`, 20, h - 20);
    ctx.fillText(`freq ${Math.round(osc1.frequency.value)}hz / ${Math.round(osc2.frequency.value)}hz`, 20, h - 40);
  }
  
  requestAnimationFrame(draw);
}

// Mouse interaction
document.addEventListener('mousemove', (e) => {
  mouseX = e.clientX / w;
  mouseY = e.clientY / h;
  updateFrequencies();
});

document.addEventListener('click', initAudio);

// Touch support
document.addEventListener('touchstart', (e) => {
  initAudio();
  const touch = e.touches[0];
  mouseX = touch.clientX / w;
  mouseY = touch.clientY / h;
  updateFrequencies();
});

document.addEventListener('touchmove', (e) => {
  const touch = e.touches[0];
  mouseX = touch.clientX / w;
  mouseY = touch.clientY / h;
  updateFrequencies();
});

window.addEventListener('resize', resize);
resize();
requestAnimationFrame(draw);
</script>
</body>
</html>
