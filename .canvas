<style>
@import url('https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@0,200;0,300;1,200;1,300&family=Syne:wght@400;700&display=swap');

.canvas-container {
  height: 100%;
  width: 100%;
  background: #F2EDE4;
  position: relative;
  overflow: hidden;
}

/* Linen texture overlay */
.canvas-container::before {
  content: '';
  position: absolute;
  inset: 0;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='1.2' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
  opacity: 0.035;
  pointer-events: none;
  z-index: 50;
}

/* Warm wash at the top — morning light flooding in */
.light-wash {
  position: absolute;
  top: -20%;
  left: -10%;
  right: -10%;
  height: 70%;
  background: radial-gradient(
    ellipse 100% 100% at 60% 0%,
    rgba(218, 170, 110, 0.18) 0%,
    rgba(218, 170, 110, 0.08) 35%,
    transparent 65%
  );
  animation: washPulse 10s ease-in-out infinite;
}

@keyframes washPulse {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 1; }
}

/* The loom — vertical warp threads */
.warp {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 1px;
  opacity: 0;
  animation: warpAppear 2s ease-out forwards;
}

.warp:nth-child(1)  { left: 8%;  background: rgba(196, 156, 104, 0.25); animation-delay: 0.1s; }
.warp:nth-child(2)  { left: 14%; background: rgba(196, 156, 104, 0.15); animation-delay: 0.2s; }
.warp:nth-child(3)  { left: 20%; background: rgba(196, 156, 104, 0.30); animation-delay: 0.05s; }
.warp:nth-child(4)  { left: 26%; background: rgba(196, 156, 104, 0.12); animation-delay: 0.35s; }
.warp:nth-child(5)  { left: 32%; background: rgba(196, 156, 104, 0.22); animation-delay: 0.15s; }
.warp:nth-child(6)  { left: 38%; background: rgba(196, 156, 104, 0.18); animation-delay: 0.4s; }
.warp:nth-child(7)  { left: 44%; background: rgba(196, 156, 104, 0.35); animation-delay: 0.08s; width: 2px; }
.warp:nth-child(8)  { left: 50%; background: rgba(196, 156, 104, 0.14); animation-delay: 0.28s; }
.warp:nth-child(9)  { left: 56%; background: rgba(196, 156, 104, 0.20); animation-delay: 0.18s; }
.warp:nth-child(10) { left: 62%; background: rgba(196, 156, 104, 0.28); animation-delay: 0.12s; }
.warp:nth-child(11) { left: 68%; background: rgba(196, 156, 104, 0.10); animation-delay: 0.45s; }
.warp:nth-child(12) { left: 74%; background: rgba(196, 156, 104, 0.24); animation-delay: 0.22s; }
.warp:nth-child(13) { left: 80%; background: rgba(196, 156, 104, 0.16); animation-delay: 0.32s; }
.warp:nth-child(14) { left: 86%; background: rgba(196, 156, 104, 0.30); animation-delay: 0.06s; }
.warp:nth-child(15) { left: 92%; background: rgba(196, 156, 104, 0.12); animation-delay: 0.38s; }

@keyframes warpAppear {
  0% { opacity: 0; transform: scaleY(0); transform-origin: top; }
  100% { opacity: 1; transform: scaleY(1); }
}

/* The weft — horizontal thread weaving through */
.weft {
  position: absolute;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(194, 114, 88, 0.0) 5%,
    rgba(194, 114, 88, 0.5) 15%,
    rgba(194, 114, 88, 0.7) 30%,
    rgba(194, 114, 88, 0.5) 50%,
    rgba(194, 114, 88, 0.7) 70%,
    rgba(194, 114, 88, 0.5) 85%,
    rgba(194, 114, 88, 0.0) 95%,
    transparent 100%
  );
  opacity: 0;
  animation: weftWeave 4s ease-in-out forwards;
}

.weft-1 { top: 38%; animation-delay: 1.2s; }
.weft-2 { top: 50%; animation-delay: 1.8s; height: 3px; }
.weft-3 { top: 62%; animation-delay: 2.4s; }

@keyframes weftWeave {
  0% { 
    opacity: 0;
    clip-path: inset(0 100% 0 0);
  }
  60% {
    clip-path: inset(0 0 0 0);
    opacity: 0.8;
  }
  100% {
    clip-path: inset(0 0 0 0);
    opacity: 0.6;
  }
}

/* Intersection glow — where warp meets weft */
.node {
  position: absolute;
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: rgba(218, 170, 110, 0.8);
  box-shadow: 0 0 12px rgba(218, 170, 110, 0.4), 0 0 30px rgba(218, 170, 110, 0.15);
  opacity: 0;
  animation: nodeGlow 3s ease-in-out forwards;
}

.node:nth-child(1)  { left: calc(20% - 3px); top: calc(38% - 3px); animation-delay: 2.0s; }
.node:nth-child(2)  { left: calc(44% - 3px); top: calc(50% - 3px); animation-delay: 2.5s; width: 8px; height: 8px; }
.node:nth-child(3)  { left: calc(62% - 3px); top: calc(38% - 3px); animation-delay: 2.2s; }
.node:nth-child(4)  { left: calc(74% - 3px); top: calc(62% - 3px); animation-delay: 2.8s; }
.node:nth-child(5)  { left: calc(32% - 3px); top: calc(62% - 3px); animation-delay: 3.0s; }
.node:nth-child(6)  { left: calc(86% - 3px); top: calc(50% - 3px); animation-delay: 2.6s; }
.node:nth-child(7)  { left: calc(50% - 3px); top: calc(62% - 3px); animation-delay: 3.2s; }

@keyframes nodeGlow {
  0% { opacity: 0; transform: scale(0); }
  50% { opacity: 1; transform: scale(1.3); }
  100% { opacity: 0.7; transform: scale(1); }
}

/* Central node breathes */
.node:nth-child(2) {
  animation: nodeGlow 3s ease-in-out forwards, nodeBreathe 5s ease-in-out 3s infinite;
}

@keyframes nodeBreathe {
  0%, 100% { 
    box-shadow: 0 0 12px rgba(218, 170, 110, 0.4), 0 0 30px rgba(218, 170, 110, 0.15);
    transform: scale(1);
  }
  50% { 
    box-shadow: 0 0 20px rgba(218, 170, 110, 0.6), 0 0 50px rgba(218, 170, 110, 0.25);
    transform: scale(1.15);
  }
}

/* Text — left-anchored, editorial */
.text-block {
  position: absolute;
  left: 8%;
  bottom: 14%;
  z-index: 10;
}

.title {
  font-family: 'Crimson Pro', serif;
  font-weight: 200;
  font-style: italic;
  font-size: clamp(4.5rem, 14vw, 8.5rem);
  color: rgba(61, 43, 31, 0.55);
  letter-spacing: 0.04em;
  line-height: 0.9;
  opacity: 0;
  animation: titleIn 2s ease-out 0.8s forwards;
}

@keyframes titleIn {
  0% { opacity: 0; transform: translateY(20px); }
  100% { opacity: 1; transform: translateY(0); }
}

.subtitle {
  font-family: 'Syne', sans-serif;
  font-weight: 400;
  font-size: clamp(0.65rem, 1.8vw, 0.9rem);
  color: rgba(158, 130, 98, 0.6);
  letter-spacing: 0.5em;
  text-transform: uppercase;
  margin-top: 1.5rem;
  margin-left: 0.3rem;
  opacity: 0;
  animation: subIn 2s ease-out 1.5s forwards;
}

@keyframes subIn {
  0% { opacity: 0; transform: translateX(-10px); }
  100% { opacity: 1; transform: translateX(0); }
}

/* Time mark — quiet corner element */
.time-mark {
  position: absolute;
  top: 8%;
  right: 8%;
  font-family: 'Syne', sans-serif;
  font-weight: 700;
  font-size: clamp(0.6rem, 1.5vw, 0.75rem);
  color: rgba(194, 114, 88, 0.4);
  letter-spacing: 0.3em;
  opacity: 0;
  animation: markIn 1.5s ease-out 3s forwards;
}

@keyframes markIn {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

/* Floating mote — single dust particle in morning light */
.mote {
  position: absolute;
  width: 4px;
  height: 4px;
  border-radius: 50%;
  background: rgba(218, 180, 130, 0.5);
  filter: blur(0.5px);
  animation: moteFloat 20s ease-in-out infinite;
}

.mote:nth-child(1) { left: 35%; top: 25%; animation-delay: 0s; }
.mote:nth-child(2) { left: 55%; top: 30%; animation-delay: -7s; width: 3px; height: 3px; }
.mote:nth-child(3) { left: 70%; top: 20%; animation-delay: -14s; width: 2px; height: 2px; opacity: 0.4; }

@keyframes moteFloat {
  0%, 100% { transform: translate(0, 0); opacity: 0.4; }
  25% { transform: translate(15px, 10px); opacity: 0.7; }
  50% { transform: translate(-5px, 20px); opacity: 0.3; }
  75% { transform: translate(10px, -5px); opacity: 0.6; }
}
</style>

<div class="canvas-container">
  <div class="light-wash"></div>

  <!-- Warp threads (vertical) -->
  <div class="warp"></div>
  <div class="warp"></div>
  <div class="warp"></div>
  <div class="warp"></div>
  <div class="warp"></div>
  <div class="warp"></div>
  <div class="warp"></div>
  <div class="warp"></div>
  <div class="warp"></div>
  <div class="warp"></div>
  <div class="warp"></div>
  <div class="warp"></div>
  <div class="warp"></div>
  <div class="warp"></div>
  <div class="warp"></div>

  <!-- Weft threads (horizontal) -->
  <div class="weft weft-1"></div>
  <div class="weft weft-2"></div>
  <div class="weft weft-3"></div>

  <!-- Intersection nodes -->
  <div class="node"></div>
  <div class="node"></div>
  <div class="node"></div>
  <div class="node"></div>
  <div class="node"></div>
  <div class="node"></div>
  <div class="node"></div>

  <!-- Dust motes in morning light -->
  <div class="mote"></div>
  <div class="mote"></div>
  <div class="mote"></div>

  <div class="time-mark">THU · 09</div>

  <div class="text-block">
    <div class="title">loom</div>
    <div class="subtitle">threads of a quiet morning</div>
  </div>
</div>
