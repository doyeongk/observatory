<style>
@import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;1,300&family=Jost:wght@200&display=swap');

.canvas-container {
  height: 100%;
  width: 100%;
  background: linear-gradient(
    175deg,
    #1a1420 0%,
    #0f1624 35%,
    #0a1018 100%
  );
  position: relative;
  overflow: hidden;
}

/* Grain overlay */
.canvas-container::before {
  content: '';
  position: absolute;
  inset: 0;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
  opacity: 0.04;
  pointer-events: none;
  z-index: 100;
}

/* Horizon glow - last light */
.horizon {
  position: absolute;
  bottom: 25%;
  left: 0;
  right: 0;
  height: 200px;
  background: radial-gradient(
    ellipse 120% 80% at 50% 100%,
    rgba(186, 120, 97, 0.12) 0%,
    rgba(147, 112, 142, 0.06) 40%,
    transparent 70%
  );
  animation: horizonBreathe 8s ease-in-out infinite;
}

@keyframes horizonBreathe {
  0%, 100% { opacity: 0.7; transform: scaleX(1); }
  50% { opacity: 1; transform: scaleX(1.05); }
}

/* Settling particles */
.particle {
  position: absolute;
  border-radius: 50%;
  opacity: 0;
  animation: settle linear infinite;
}

.particle:nth-child(1) {
  width: 3px; height: 3px;
  background: rgba(212, 165, 145, 0.6);
  left: 15%; top: -5%;
  animation-duration: 28s;
  animation-delay: 0s;
}

.particle:nth-child(2) {
  width: 2px; height: 2px;
  background: rgba(167, 139, 163, 0.5);
  left: 32%; top: -5%;
  animation-duration: 35s;
  animation-delay: -8s;
}

.particle:nth-child(3) {
  width: 4px; height: 4px;
  background: rgba(186, 146, 132, 0.4);
  left: 58%; top: -5%;
  animation-duration: 25s;
  animation-delay: -15s;
}

.particle:nth-child(4) {
  width: 2px; height: 2px;
  background: rgba(145, 128, 156, 0.5);
  left: 78%; top: -5%;
  animation-duration: 32s;
  animation-delay: -5s;
}

.particle:nth-child(5) {
  width: 3px; height: 3px;
  background: rgba(178, 145, 140, 0.35);
  left: 45%; top: -5%;
  animation-duration: 40s;
  animation-delay: -20s;
}

.particle:nth-child(6) {
  width: 2px; height: 2px;
  background: rgba(156, 140, 165, 0.4);
  left: 88%; top: -5%;
  animation-duration: 30s;
  animation-delay: -12s;
}

.particle:nth-child(7) {
  width: 5px; height: 5px;
  background: rgba(195, 155, 135, 0.25);
  left: 25%; top: -5%;
  animation-duration: 45s;
  animation-delay: -25s;
  filter: blur(1px);
}

.particle:nth-child(8) {
  width: 2px; height: 2px;
  background: rgba(140, 130, 155, 0.5);
  left: 68%; top: -5%;
  animation-duration: 33s;
  animation-delay: -18s;
}

@keyframes settle {
  0% { 
    transform: translateY(0) translateX(0);
    opacity: 0;
  }
  5% { opacity: 0.8; }
  50% { 
    transform: translateY(50vh) translateX(20px);
    opacity: 0.4;
  }
  95% { opacity: 0.1; }
  100% { 
    transform: translateY(105vh) translateX(-10px);
    opacity: 0;
  }
}

/* Central text composition - offset to left */
.text-block {
  position: absolute;
  left: 12%;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
}

.exhale {
  font-family: 'Cormorant Garamond', serif;
  font-weight: 300;
  font-style: italic;
  font-size: clamp(4rem, 15vw, 9rem);
  color: rgba(205, 185, 180, 0.7);
  letter-spacing: 0.08em;
  line-height: 0.85;
  animation: textFade 6s ease-in-out infinite;
}

@keyframes textFade {
  0%, 100% { opacity: 0.7; }
  50% { opacity: 0.85; }
}

.subline {
  font-family: 'Jost', sans-serif;
  font-weight: 200;
  font-size: clamp(0.7rem, 2vw, 1rem);
  color: rgba(145, 135, 150, 0.5);
  letter-spacing: 0.4em;
  text-transform: lowercase;
  margin-top: 2rem;
  margin-left: 0.5rem;
}

/* Single bright point - last light of day */
.last-light {
  position: absolute;
  right: 20%;
  top: 35%;
  width: 6px;
  height: 6px;
  background: rgba(235, 195, 165, 0.9);
  border-radius: 50%;
  box-shadow: 
    0 0 20px rgba(235, 195, 165, 0.5),
    0 0 60px rgba(235, 195, 165, 0.2);
  animation: lastLight 4s ease-in-out infinite;
}

@keyframes lastLight {
  0%, 100% { 
    opacity: 0.6;
    transform: scale(1);
  }
  50% { 
    opacity: 1;
    transform: scale(1.1);
  }
}

/* Faint horizontal bands - atmospheric layers */
.band {
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(160, 140, 155, 0.08) 30%,
    rgba(160, 140, 155, 0.12) 50%,
    rgba(160, 140, 155, 0.08) 70%,
    transparent 100%
  );
}

.band:nth-child(1) { top: 30%; }
.band:nth-child(2) { top: 45%; opacity: 0.7; }
.band:nth-child(3) { top: 60%; opacity: 0.5; }
</style>

<div class="canvas-container">
  <div class="horizon"></div>
  
  <div class="band"></div>
  <div class="band"></div>
  <div class="band"></div>
  
  <div class="particle"></div>
  <div class="particle"></div>
  <div class="particle"></div>
  <div class="particle"></div>
  <div class="particle"></div>
  <div class="particle"></div>
  <div class="particle"></div>
  <div class="particle"></div>
  
  <div class="last-light"></div>
  
  <div class="text-block">
    <div class="exhale">exhale</div>
    <div class="subline">the day disperses</div>
  </div>
</div>
