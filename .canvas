<style>
@import url('https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=Outfit:wght@100;900&display=swap');

.canvas-container {
  height: 100%;
  width: 100%;
  background: #0a0a0f;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
}

/* Scan lines */
.canvas-container::before {
  content: '';
  position: absolute;
  inset: 0;
  background: repeating-linear-gradient(
    0deg,
    transparent,
    transparent 2px,
    rgba(0,255,136,0.015) 2px,
    rgba(0,255,136,0.015) 4px
  );
  pointer-events: none;
  z-index: 10;
}

/* Grid background */
.grid {
  position: absolute;
  inset: 0;
  background-image: 
    linear-gradient(rgba(0,255,136,0.05) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0,255,136,0.05) 1px, transparent 1px);
  background-size: 40px 40px;
  animation: gridPulse 4s ease-in-out infinite;
}

@keyframes gridPulse {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}

/* Central terminal block */
.terminal {
  position: relative;
  z-index: 2;
  padding: 2rem 3rem;
  border: 1px solid rgba(0,255,136,0.3);
  background: rgba(0,10,5,0.8);
  box-shadow: 
    0 0 30px rgba(0,255,136,0.1),
    inset 0 0 60px rgba(0,255,136,0.03);
}

.status-line {
  font-family: 'Space Mono', monospace;
  font-size: clamp(0.6rem, 1.5vw, 0.75rem);
  color: rgba(0,255,136,0.5);
  letter-spacing: 0.3em;
  text-transform: uppercase;
  margin-bottom: 1rem;
  animation: flicker 0.1s infinite;
}

@keyframes flicker {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 0.6; }
}

.main-text {
  font-family: 'Outfit', sans-serif;
  font-weight: 900;
  font-size: clamp(2.5rem, 10vw, 5rem);
  color: #00ff88;
  letter-spacing: -0.02em;
  line-height: 0.9;
  text-shadow: 
    0 0 20px rgba(0,255,136,0.5),
    0 0 40px rgba(0,255,136,0.3),
    0 0 60px rgba(0,255,136,0.1);
  animation: textGlow 2s ease-in-out infinite alternate;
}

@keyframes textGlow {
  from { 
    text-shadow: 
      0 0 20px rgba(0,255,136,0.5),
      0 0 40px rgba(0,255,136,0.3);
  }
  to { 
    text-shadow: 
      0 0 30px rgba(0,255,136,0.7),
      0 0 60px rgba(0,255,136,0.4),
      0 0 80px rgba(0,255,136,0.2);
  }
}

.cursor {
  display: inline-block;
  width: 4px;
  height: 1em;
  background: #00ff88;
  margin-left: 0.2em;
  animation: blink 1s step-end infinite;
  vertical-align: baseline;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}

.subtext {
  font-family: 'Space Mono', monospace;
  font-size: clamp(0.7rem, 1.8vw, 0.9rem);
  color: rgba(0,255,136,0.4);
  margin-top: 1.5rem;
  letter-spacing: 0.15em;
}

/* Floating data streams */
.stream {
  position: absolute;
  font-family: 'Space Mono', monospace;
  font-size: 0.6rem;
  color: rgba(0,255,136,0.15);
  writing-mode: vertical-rl;
  animation: streamDown 20s linear infinite;
}

.stream:nth-child(1) { left: 8%; animation-duration: 15s; }
.stream:nth-child(2) { left: 25%; animation-duration: 22s; animation-delay: -5s; }
.stream:nth-child(3) { right: 20%; animation-duration: 18s; animation-delay: -10s; }
.stream:nth-child(4) { right: 8%; animation-duration: 25s; animation-delay: -3s; }

@keyframes streamDown {
  from { transform: translateY(-100%); }
  to { transform: translateY(100vh); }
}

/* Corner accents */
.corner {
  position: absolute;
  width: 30px;
  height: 30px;
  border: 1px solid rgba(0,255,136,0.3);
}

.corner.tl { top: 15%; left: 10%; border-right: none; border-bottom: none; }
.corner.tr { top: 15%; right: 10%; border-left: none; border-bottom: none; }
.corner.bl { bottom: 15%; left: 10%; border-right: none; border-top: none; }
.corner.br { bottom: 15%; right: 10%; border-left: none; border-top: none; }
</style>

<div class="canvas-container">
  <div class="grid"></div>
  
  <div class="stream">01001111 01001110</div>
  <div class="stream">ACTIVE PROCESS</div>
  <div class="stream">11010011 10101</div>
  <div class="stream">SYS NOMINAL</div>
  
  <div class="corner tl"></div>
  <div class="corner tr"></div>
  <div class="corner bl"></div>
  <div class="corner br"></div>
  
  <div class="terminal">
    <div class="status-line">session active</div>
    <div class="main-text">ONLINE<span class="cursor"></span></div>
    <div class="subtext">ready to execute</div>
  </div>
</div>
