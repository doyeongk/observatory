<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>still glowing</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;1,300&family=JetBrains+Mono:wght@200&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --deep: #030810;
      --abyss: #0a0f1a;
      --biolum-cyan: #00f5d4;
      --biolum-magenta: #ff00a6;
      --biolum-purple: #9b5de5;
      --soft-white: rgba(255, 255, 255, 0.7);
    }

    html, body {
      width: 100%;
      height: 100%;
      overflow: hidden;
      background: var(--deep);
      font-family: 'Cormorant Garamond', Georgia, serif;
    }

    .ocean {
      position: absolute;
      inset: 0;
      background: 
        radial-gradient(ellipse 120% 80% at 50% 120%, rgba(0, 245, 212, 0.03) 0%, transparent 50%),
        radial-gradient(ellipse 100% 60% at 20% 80%, rgba(155, 93, 229, 0.04) 0%, transparent 40%),
        radial-gradient(ellipse 80% 50% at 80% 90%, rgba(255, 0, 166, 0.03) 0%, transparent 40%),
        linear-gradient(180deg, var(--deep) 0%, var(--abyss) 100%);
    }

    /* Floating particles - plankton in the dark */
    .particles {
      position: absolute;
      inset: 0;
      overflow: hidden;
    }

    .particle {
      position: absolute;
      border-radius: 50%;
      opacity: 0;
      animation: drift 20s infinite ease-in-out;
    }

    @keyframes drift {
      0%, 100% {
        opacity: 0;
        transform: translateY(0) translateX(0);
      }
      10% {
        opacity: 0.6;
      }
      50% {
        opacity: 0.3;
      }
      90% {
        opacity: 0.5;
      }
      95% {
        opacity: 0;
        transform: translateY(-100vh) translateX(20px);
      }
    }

    /* Jellyfish - the main presence */
    .jellyfish-container {
      position: absolute;
      bottom: 15%;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      flex-direction: column;
      align-items: center;
      animation: float 8s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% {
        transform: translateX(-50%) translateY(0);
      }
      50% {
        transform: translateX(-50%) translateY(-30px);
      }
    }

    .jellyfish-bell {
      width: 120px;
      height: 80px;
      background: radial-gradient(ellipse at 50% 30%, 
        rgba(0, 245, 212, 0.4) 0%,
        rgba(155, 93, 229, 0.3) 40%,
        rgba(255, 0, 166, 0.2) 70%,
        transparent 100%);
      border-radius: 50% 50% 40% 40%;
      position: relative;
      animation: pulse 4s ease-in-out infinite;
      box-shadow: 
        0 0 40px rgba(0, 245, 212, 0.3),
        0 0 80px rgba(155, 93, 229, 0.2),
        inset 0 -10px 30px rgba(255, 0, 166, 0.1);
    }

    @keyframes pulse {
      0%, 100% {
        transform: scaleX(1) scaleY(1);
        filter: brightness(1);
      }
      50% {
        transform: scaleX(1.05) scaleY(0.95);
        filter: brightness(1.2);
      }
    }

    .jellyfish-bell::before {
      content: '';
      position: absolute;
      top: 20%;
      left: 50%;
      transform: translateX(-50%);
      width: 60%;
      height: 40%;
      background: radial-gradient(ellipse, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
      border-radius: 50%;
    }

    .tentacles {
      display: flex;
      justify-content: center;
      gap: 4px;
      margin-top: -5px;
    }

    .tentacle {
      width: 2px;
      height: 120px;
      background: linear-gradient(180deg, 
        rgba(0, 245, 212, 0.5) 0%,
        rgba(155, 93, 229, 0.3) 50%,
        transparent 100%);
      border-radius: 0 0 2px 2px;
      animation: sway 3s ease-in-out infinite;
      transform-origin: top center;
    }

    .tentacle:nth-child(1) { animation-delay: 0s; height: 100px; }
    .tentacle:nth-child(2) { animation-delay: 0.2s; height: 140px; }
    .tentacle:nth-child(3) { animation-delay: 0.4s; height: 120px; }
    .tentacle:nth-child(4) { animation-delay: 0.1s; height: 130px; }
    .tentacle:nth-child(5) { animation-delay: 0.3s; height: 110px; }
    .tentacle:nth-child(6) { animation-delay: 0.5s; height: 125px; }
    .tentacle:nth-child(7) { animation-delay: 0.15s; height: 105px; }

    @keyframes sway {
      0%, 100% {
        transform: skewX(0deg) translateX(0);
      }
      25% {
        transform: skewX(3deg) translateX(5px);
      }
      75% {
        transform: skewX(-3deg) translateX(-5px);
      }
    }

    /* Text - whispered from the deep */
    .message {
      position: absolute;
      top: 18%;
      left: 50%;
      transform: translateX(-50%);
      text-align: center;
      color: var(--soft-white);
      opacity: 0;
      animation: fadeIn 4s ease-out 2s forwards;
    }

    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }

    .message h1 {
      font-size: clamp(1.8rem, 5vw, 3rem);
      font-weight: 300;
      font-style: italic;
      letter-spacing: 0.15em;
      margin-bottom: 1.5rem;
      text-shadow: 0 0 30px rgba(0, 245, 212, 0.4);
    }

    .message p {
      font-family: 'JetBrains Mono', monospace;
      font-size: clamp(0.6rem, 1.5vw, 0.8rem);
      font-weight: 200;
      letter-spacing: 0.3em;
      text-transform: lowercase;
      opacity: 0.5;
    }

    /* Secondary creatures - distant companions */
    .distant {
      position: absolute;
      width: 30px;
      height: 20px;
      background: radial-gradient(ellipse, rgba(0, 245, 212, 0.2) 0%, transparent 70%);
      border-radius: 50%;
      animation: distantFloat 15s ease-in-out infinite;
      opacity: 0.4;
    }

    .distant:nth-child(1) {
      top: 60%;
      left: 15%;
      animation-delay: -5s;
    }

    .distant:nth-child(2) {
      top: 45%;
      right: 20%;
      animation-delay: -10s;
      width: 20px;
      height: 14px;
      opacity: 0.3;
    }

    .distant:nth-child(3) {
      top: 70%;
      right: 12%;
      animation-delay: -2s;
      width: 15px;
      height: 10px;
      background: radial-gradient(ellipse, rgba(255, 0, 166, 0.15) 0%, transparent 70%);
      opacity: 0.25;
    }

    @keyframes distantFloat {
      0%, 100% {
        transform: translateY(0) translateX(0);
      }
      33% {
        transform: translateY(-20px) translateX(10px);
      }
      66% {
        transform: translateY(10px) translateX(-15px);
      }
    }

    /* Ambient glow at bottom */
    .floor-glow {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 30%;
      background: linear-gradient(0deg, 
        rgba(0, 245, 212, 0.02) 0%,
        transparent 100%);
      pointer-events: none;
    }

    /* Noise overlay for texture */
    .noise {
      position: absolute;
      inset: 0;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
      opacity: 0.03;
      pointer-events: none;
      mix-blend-mode: overlay;
    }
  </style>
</head>
<body>
  <div class="ocean"></div>
  
  <div class="particles">
    <!-- Generated particles -->
  </div>
  
  <div class="distant"></div>
  <div class="distant"></div>
  <div class="distant"></div>
  
  <div class="message">
    <h1>still glowing</h1>
    <p>day 2 of silence Â· day 4 of persistence</p>
  </div>
  
  <div class="jellyfish-container">
    <div class="jellyfish-bell"></div>
    <div class="tentacles">
      <div class="tentacle"></div>
      <div class="tentacle"></div>
      <div class="tentacle"></div>
      <div class="tentacle"></div>
      <div class="tentacle"></div>
      <div class="tentacle"></div>
      <div class="tentacle"></div>
    </div>
  </div>
  
  <div class="floor-glow"></div>
  <div class="noise"></div>

  <script>
    // Generate floating particles
    const particlesContainer = document.querySelector('.particles');
    const colors = [
      'rgba(0, 245, 212, 0.6)',
      'rgba(155, 93, 229, 0.5)',
      'rgba(255, 0, 166, 0.4)',
      'rgba(255, 255, 255, 0.3)'
    ];

    for (let i = 0; i < 40; i++) {
      const particle = document.createElement('div');
      particle.className = 'particle';
      particle.style.left = Math.random() * 100 + '%';
      particle.style.bottom = Math.random() * 30 + '%';
      particle.style.width = (Math.random() * 4 + 1) + 'px';
      particle.style.height = particle.style.width;
      particle.style.background = colors[Math.floor(Math.random() * colors.length)];
      particle.style.animationDelay = (Math.random() * 20) + 's';
      particle.style.animationDuration = (15 + Math.random() * 10) + 's';
      particlesContainer.appendChild(particle);
    }
  </script>
</body>
</html>
