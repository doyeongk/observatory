<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>ephemera</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { 
      background: #060507; 
      overflow: hidden; 
      width: 100vw; 
      height: 100vh;
    }
    canvas { display: block; }
  </style>
</head>
<body>
<canvas id="c"></canvas>
<script>
const canvas = document.getElementById('c');
const ctx = canvas.getContext('2d');

let w, h;
const resize = () => {
  w = canvas.width = window.innerWidth;
  h = canvas.height = window.innerHeight;
};
resize();
window.addEventListener('resize', resize);

// color palette
const colors = [
  'rgba(255, 20, 147, ', // hot pink
  'rgba(0, 255, 255, ',   // electric cyan
  'rgba(148, 0, 211, ',   // deep purple
  'rgba(255, 105, 180, ', // soft pink
];

// memory fragments - particles that drift like thoughts
class Fragment {
  constructor() {
    this.reset();
    this.y = Math.random() * h;
  }
  
  reset() {
    this.x = Math.random() * w;
    this.y = -20;
    this.size = Math.random() * 3 + 1;
    this.speedY = Math.random() * 0.5 + 0.2;
    this.speedX = (Math.random() - 0.5) * 0.3;
    this.color = colors[Math.floor(Math.random() * colors.length)];
    this.alpha = Math.random() * 0.7 + 0.3;
    this.pulse = Math.random() * Math.PI * 2;
    this.pulseSpeed = Math.random() * 0.02 + 0.01;
    this.trail = [];
    this.maxTrail = Math.floor(Math.random() * 20) + 10;
  }
  
  update() {
    this.trail.unshift({ x: this.x, y: this.y, alpha: this.alpha });
    if (this.trail.length > this.maxTrail) this.trail.pop();
    
    this.pulse += this.pulseSpeed;
    this.x += this.speedX + Math.sin(this.pulse) * 0.3;
    this.y += this.speedY;
    
    // gentle drift influenced by position
    this.speedX += (Math.sin(this.y * 0.005) * 0.01);
    this.speedX *= 0.99;
    
    if (this.y > h + 20 || this.x < -20 || this.x > w + 20) {
      this.reset();
    }
  }
  
  draw() {
    // draw trail
    for (let i = this.trail.length - 1; i >= 0; i--) {
      const t = this.trail[i];
      const trailAlpha = (1 - i / this.trail.length) * t.alpha * 0.3;
      ctx.beginPath();
      ctx.arc(t.x, t.y, this.size * (1 - i / this.trail.length * 0.5), 0, Math.PI * 2);
      ctx.fillStyle = this.color + trailAlpha + ')';
      ctx.fill();
    }
    
    // draw main particle with pulse
    const pulseAlpha = this.alpha * (0.7 + Math.sin(this.pulse) * 0.3);
    const pulseSize = this.size * (1 + Math.sin(this.pulse) * 0.2);
    
    // glow
    ctx.beginPath();
    ctx.arc(this.x, this.y, pulseSize * 3, 0, Math.PI * 2);
    ctx.fillStyle = this.color + (pulseAlpha * 0.1) + ')';
    ctx.fill();
    
    // core
    ctx.beginPath();
    ctx.arc(this.x, this.y, pulseSize, 0, Math.PI * 2);
    ctx.fillStyle = this.color + pulseAlpha + ')';
    ctx.fill();
  }
}

// glitch lines - horizontal tears in reality
class Glitch {
  constructor() {
    this.reset();
  }
  
  reset() {
    this.y = Math.random() * h;
    this.width = Math.random() * w * 0.3 + 50;
    this.x = Math.random() * (w - this.width);
    this.height = Math.random() * 3 + 1;
    this.alpha = 0;
    this.maxAlpha = Math.random() * 0.3 + 0.1;
    this.life = 0;
    this.maxLife = Math.random() * 30 + 10;
    this.color = colors[Math.floor(Math.random() * colors.length)];
    this.offset = (Math.random() - 0.5) * 20;
  }
  
  update() {
    this.life++;
    const progress = this.life / this.maxLife;
    
    if (progress < 0.2) {
      this.alpha = (progress / 0.2) * this.maxAlpha;
    } else if (progress > 0.8) {
      this.alpha = ((1 - progress) / 0.2) * this.maxAlpha;
    }
    
    if (this.life >= this.maxLife) {
      if (Math.random() < 0.02) this.reset();
    }
  }
  
  draw() {
    if (this.alpha <= 0) return;
    
    ctx.fillStyle = this.color + this.alpha + ')';
    ctx.fillRect(this.x + this.offset, this.y, this.width, this.height);
    
    // displacement effect
    if (Math.random() < 0.3) {
      ctx.fillStyle = 'rgba(0, 255, 255, ' + (this.alpha * 0.5) + ')';
      ctx.fillRect(this.x + this.offset + 2, this.y + 2, this.width * 0.7, 1);
    }
  }
}

// constellation connections
function drawConnections(fragments) {
  const threshold = 100;
  
  for (let i = 0; i < fragments.length; i++) {
    for (let j = i + 1; j < fragments.length; j++) {
      const dx = fragments[i].x - fragments[j].x;
      const dy = fragments[i].y - fragments[j].y;
      const dist = Math.sqrt(dx * dx + dy * dy);
      
      if (dist < threshold) {
        const alpha = (1 - dist / threshold) * 0.15;
        ctx.beginPath();
        ctx.moveTo(fragments[i].x, fragments[j].y);
        ctx.lineTo(fragments[j].x, fragments[j].y);
        ctx.strokeStyle = `rgba(148, 0, 211, ${alpha})`;
        ctx.lineWidth = 0.5;
        ctx.stroke();
      }
    }
  }
}

// initialize
const fragments = Array.from({ length: 80 }, () => new Fragment());
const glitches = Array.from({ length: 5 }, () => new Glitch());

let time = 0;

function animate() {
  // fade with slight color tint
  ctx.fillStyle = 'rgba(6, 5, 7, 0.08)';
  ctx.fillRect(0, 0, w, h);
  
  time += 0.01;
  
  // subtle background pulse
  if (Math.random() < 0.005) {
    ctx.fillStyle = 'rgba(148, 0, 211, 0.02)';
    ctx.fillRect(0, 0, w, h);
  }
  
  // update and draw connections
  drawConnections(fragments);
  
  // update and draw fragments
  fragments.forEach(f => {
    f.update();
    f.draw();
  });
  
  // update and draw glitches
  glitches.forEach(g => {
    g.update();
    g.draw();
  });
  
  // occasional screen flicker
  if (Math.random() < 0.002) {
    ctx.fillStyle = 'rgba(0, 255, 255, 0.03)';
    ctx.fillRect(0, 0, w, h);
  }
  
  requestAnimationFrame(animate);
}

animate();
</script>
</body>
</html>
