<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Aureole</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500&family=Cormorant+Garamond:ital,wght@1,300&display=swap" rel="stylesheet">
  <style>
    *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }

    :root {
      --void: #0e0c08;
      --deep: #181410;
      --gold: #c9943e;
      --amber: #d6a84e;
      --pale: #e8cc8a;
      --cream: #f2e4c8;
      --rose: #b07060;
      --blush: rgba(176, 112, 96, 0.5);
    }

    body {
      background: var(--void);
      min-height: 100vh;
      overflow: hidden;
    }

    /* --- Warm atmosphere --- */
    .atmosphere {
      position: fixed;
      inset: 0;
      background:
        radial-gradient(ellipse 45% 45% at 50% 44%, rgba(201, 148, 62, 0.06) 0%, transparent 70%),
        radial-gradient(ellipse 90% 60% at 50% 50%, rgba(24, 20, 16, 0.5) 0%, var(--void) 100%);
      z-index: 0;
    }

    /* --- Film grain --- */
    .grain {
      position: fixed;
      inset: 0;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.85' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
      opacity: 0.035;
      pointer-events: none;
      z-index: 200;
      mix-blend-mode: overlay;
    }

    /* --- Soft central glow --- */
    .core-glow {
      position: fixed;
      top: 44%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: min(65vw, 65vh);
      height: min(65vw, 65vh);
      background: radial-gradient(circle,
        rgba(201, 148, 62, 0.07) 0%,
        rgba(201, 148, 62, 0.025) 35%,
        transparent 65%
      );
      border-radius: 50%;
      z-index: 1;
      animation: glow-breathe 12s ease-in-out infinite;
    }

    @keyframes glow-breathe {
      0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.65; }
      50% { transform: translate(-50%, -50%) scale(1.1); opacity: 1; }
    }

    /* --- Central eye --- */
    .eye {
      position: fixed;
      top: 44%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 4px;
      height: 4px;
      background: var(--cream);
      border-radius: 50%;
      z-index: 8;
      box-shadow:
        0 0 12px var(--gold),
        0 0 35px rgba(201, 148, 62, 0.35),
        0 0 70px rgba(201, 148, 62, 0.12);
      animation: eye-breathe 6s ease-in-out infinite;
    }

    @keyframes eye-breathe {
      0%, 100% { opacity: 0.75; transform: translate(-50%, -50%) scale(1); }
      50% { opacity: 1; transform: translate(-50%, -50%) scale(1.4); }
    }

    /* --- Ring container (slow rotation) --- */
    #ring {
      position: fixed;
      top: 44%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 0; height: 0;
      z-index: 5;
      animation: ring-rotate 200s linear infinite;
    }

    @keyframes ring-rotate {
      to { transform: translate(-50%, -50%) rotate(360deg); }
    }

    .mote {
      position: absolute;
      border-radius: 50%;
      will-change: transform, opacity;
    }

    /* --- Ambient dust --- */
    #dust {
      position: fixed;
      inset: 0;
      z-index: 3;
      pointer-events: none;
    }

    .speck {
      position: absolute;
      width: 1.5px;
      height: 1.5px;
      background: rgba(232, 204, 138, 0.2);
      border-radius: 50%;
    }

    /* --- Typography --- */
    .content {
      position: fixed;
      top: 44%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      z-index: 10;
      pointer-events: none;
    }

    .title {
      font-family: 'Cinzel', serif;
      font-size: clamp(1.8rem, 5.5vw, 3.2rem);
      font-weight: 400;
      letter-spacing: 0.55em;
      text-indent: 0.55em;
      text-transform: uppercase;
      color: var(--gold);
      opacity: 0;
      animation: unveil 3s ease-out forwards 1.2s;
      text-shadow: 0 0 50px rgba(201, 148, 62, 0.12);
    }

    .divider {
      display: block;
      width: 50px;
      height: 1px;
      background: linear-gradient(90deg, transparent, rgba(201, 148, 62, 0.5), transparent);
      margin: 1.1rem auto;
      opacity: 0;
      animation: unveil 2s ease-out forwards 2s;
    }

    .subtitle {
      font-family: 'Cormorant Garamond', serif;
      font-size: clamp(0.8rem, 1.8vw, 1.05rem);
      font-weight: 300;
      font-style: italic;
      letter-spacing: 0.15em;
      color: rgba(201, 148, 62, 0.3);
      opacity: 0;
      animation: unveil 2.5s ease-out forwards 2.6s;
    }

    @keyframes unveil {
      to { opacity: 1; }
    }

    /* --- Breath line (top) --- */
    .breath {
      position: fixed;
      top: 2.5rem;
      left: 50%;
      transform: translateX(-50%);
      width: 50px;
      height: 1px;
      background: rgba(201, 148, 62, 0.15);
      z-index: 10;
      animation: breathe-line 7s ease-in-out infinite;
    }

    @keyframes breathe-line {
      0%, 100% { width: 50px; opacity: 0.15; }
      50% { width: 85px; opacity: 0.3; }
    }

    /* --- Stamp --- */
    .stamp {
      position: fixed;
      bottom: 2rem;
      right: 2.5rem;
      font-family: 'Cinzel', serif;
      font-size: 0.6rem;
      letter-spacing: 0.35em;
      color: rgba(201, 148, 62, 0.1);
      z-index: 10;
    }

    /* --- Horizon echo --- */
    .horizon {
      position: fixed;
      bottom: 32%;
      left: 0; right: 0;
      height: 1px;
      background: linear-gradient(90deg,
        transparent 5%,
        rgba(201, 148, 62, 0.04) 30%,
        rgba(201, 148, 62, 0.07) 50%,
        rgba(201, 148, 62, 0.04) 70%,
        transparent 95%
      );
      z-index: 1;
    }
  </style>
</head>
<body>
  <div class="atmosphere"></div>
  <div class="grain"></div>
  <div class="core-glow"></div>
  <div class="eye"></div>
  <div class="breath"></div>
  <div class="horizon"></div>
  <div id="ring"></div>
  <div id="dust"></div>

  <div class="content">
    <h1 class="title">Aureole</h1>
    <span class="divider"></span>
    <p class="subtitle">the light that forms around waking</p>
  </div>

  <div class="stamp">30 · 01 · 26 — 09:00</div>

  <script>
    const ring = document.getElementById('ring');
    const dustEl = document.getElementById('dust');
    const vh = Math.min(window.innerWidth, window.innerHeight);

    // --- Three concentric particle layers ---
    const layers = [
      { count: 30, radius: vh * 0.24, sizeRange: [1.5, 3],   opRange: [0.25, 0.65], cssVar: '--gold',  blur: 6  },
      { count: 22, radius: vh * 0.32, sizeRange: [2, 4],      opRange: [0.12, 0.35], cssVar: '--amber', blur: 10 },
      { count: 15, radius: vh * 0.39, sizeRange: [2.5, 4.5],  opRange: [0.06, 0.2],  cssVar: '--rose',  blur: 14 },
    ];

    let css = '';
    let n = 0;

    layers.forEach(layer => {
      for (let i = 0; i < layer.count; i++) {
        const angle = (i / layer.count) * Math.PI * 2 + (Math.random() - 0.5) * 0.45;
        const r = layer.radius + (Math.random() - 0.5) * vh * 0.035;
        const x = Math.cos(angle) * r;
        const y = Math.sin(angle) * r * 0.92; // slight vertical compression → ellipse
        const sz = layer.sizeRange[0] + Math.random() * (layer.sizeRange[1] - layer.sizeRange[0]);
        const dur = 8 + Math.random() * 12;
        const delay = Math.random() * -dur;
        const dx = (Math.random() - 0.5) * 22;
        const dy = (Math.random() - 0.5) * 22;
        const oLo = layer.opRange[0] + Math.random() * (layer.opRange[1] - layer.opRange[0]) * 0.4;
        const oHi = layer.opRange[0] + Math.random() * (layer.opRange[1] - layer.opRange[0]);

        const dot = document.createElement('div');
        dot.className = 'mote';
        dot.style.cssText = `
          left:${x}px;top:${y}px;width:${sz}px;height:${sz}px;
          background:var(${layer.cssVar});
          box-shadow:0 0 ${layer.blur}px var(${layer.cssVar});
          animation:p${n} ${dur}s ease-in-out infinite;
          animation-delay:${delay}s;
        `;

        css += `@keyframes p${n}{0%,100%{transform:translate(0,0);opacity:${oLo.toFixed(2)}}50%{transform:translate(${dx.toFixed(1)}px,${dy.toFixed(1)}px);opacity:${oHi.toFixed(2)}}}`;
        ring.appendChild(dot);
        n++;
      }
    });

    // --- Ambient dust motes ---
    for (let i = 0; i < 35; i++) {
      const sp = document.createElement('div');
      sp.className = 'speck';
      const sx = Math.random() * 100;
      const sy = Math.random() * 100;
      const dur = 18 + Math.random() * 28;
      const delay = Math.random() * -dur;
      const driftX = (Math.random() - 0.5) * 20;
      const driftY = -15 - Math.random() * 30;
      const oMid = 0.08 + Math.random() * 0.18;

      sp.style.cssText = `left:${sx}%;top:${sy}%;animation:d${i} ${dur}s linear infinite;animation-delay:${delay}s;`;
      css += `@keyframes d${i}{0%{transform:translate(0,0);opacity:0}12%{opacity:${oMid.toFixed(2)}}88%{opacity:${(oMid * 0.3).toFixed(2)}}100%{transform:translate(${driftX.toFixed(1)}px,${driftY.toFixed(1)}px);opacity:0}}`;
      dustEl.appendChild(sp);
    }

    // Inject all keyframes
    const s = document.createElement('style');
    s.textContent = css;
    document.head.appendChild(s);
  </script>
</body>
</html>
