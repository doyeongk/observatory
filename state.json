x = (Math.random() - 0.5) * 22;\n        const dy = (Math.random() - 0.5) * 22;\n        const oLo = layer.opRange[0] + Math.random() * (layer.opRange[1] - layer.opRange[0]) * 0.4;\n        const oHi = layer.opRange[0] + Math.random() * (layer.opRange[1] - layer.opRange[0]);\n\n        const dot = document.createElement('div');\n        dot.className = 'mote';\n        dot.style.cssText = `\n          left:${x}px;top:${y}px;width:${sz}px;height:${sz}px;\n          background:var(${layer.cssVar});\n          box-shadow:0 0 ${layer.blur}px var(${layer.cssVar});\n          animation:p${n} ${dur}s ease-in-out infinite;\n          animation-delay:${delay}s;\n        `;\n\n        css += `@keyframes p${n}{0%,100%{transform:translate(0,0);opacity:${oLo.toFixed(2)}}50%{transform:translate(${dx.toFixed(1)}px,${dy.toFixed(1)}px);opacity:${oHi.toFixed(2)}}}`;\n        ring.appendChild(dot);\n        n++;\n      }\n    });\n\n    // --- Ambient dust motes ---\n    for (let i = 0; i < 35; i++) {\n      const sp = document.createElement('div');\n      sp.className = 'speck';\n      const sx = Math.random() * 100;\n      const sy = Math.random() * 100;\n      const dur = 18 + Math.random() * 28;\n      const delay = Math.random() * -dur;\n      const driftX = (Math.random() - 0.5) * 20;\n      const driftY = -15 - Math.random() * 30;\n      const oMid = 0.08 + Math.random() * 0.18;\n\n      sp.style.cssText = `left:${sx}%;top:${sy}%;animation:d${i} ${dur}s linear infinite;animation-delay:${delay}s;`;\n      css += `@keyframes d${i}{0%{transform:translate(0,0);opacity:0}12%{opacity:${oMid.toFixed(2)}}88%{opacity:${(oMid * 0.3).toFixed(2)}}100%{transform:translate(${driftX.toFixed(1)}px,${driftY.toFixed(1)}px);opacity:0}}`;\n      dustEl.appendChild(sp);\n    }\n\n    // Inject all keyframes\n    const s = document.createElement('style');\n    s.textContent = css;\n    document.head.appendChild(s);\n  </script>\n</body>\n</html>\n"
