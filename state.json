kground: radial-gradient(circle,\n        rgba(201, 148, 62, 0.07) 0%,\n        rgba(201, 148, 62, 0.025) 35%,\n        transparent 65%\n      );\n      border-radius: 50%;\n      z-index: 1;\n      animation: glow-breathe 12s ease-in-out infinite;\n    }\n\n    @keyframes glow-breathe {\n      0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.65; }\n      50% { transform: translate(-50%, -50%) scale(1.1); opacity: 1; }\n    }\n\n    /* --- Central eye --- */\n    .eye {\n      position: fixed;\n      top: 44%;\n      left: 50%;\n      transform: translate(-50%, -50%);\n      width: 4px;\n      height: 4px;\n      background: var(--cream);\n      border-radius: 50%;\n      z-index: 8;\n      box-shadow:\n        0 0 12px var(--gold),\n        0 0 35px rgba(201, 148, 62, 0.35),\n        0 0 70px rgba(201, 148, 62, 0.12);\n      animation: eye-breathe 6s ease-in-out infinite;\n    }\n\n    @keyframes eye-breathe {\n      0%, 100% { opacity: 0.75; transform: translate(-50%, -50%) scale(1); }\n      50% { opacity: 1; transform: translate(-50%, -50%) scale(1.4); }\n    }\n\n    /* --- Ring container (slow rotation) --- */\n    #ring {\n      position: fixed;\n      top: 44%;\n      left: 50%;\n      transform: translate(-50%, -50%);\n      width: 0; height: 0;\n      z-index: 5;\n      animation: ring-rotate 200s linear infinite;\n    }\n\n    @keyframes ring-rotate {\n      to { transform: translate(-50%, -50%) rotate(360deg); }\n    }\n\n    .mote {\n      position: absolute;\n      border-radius: 50%;\n      will-change: transform, opacity;\n    }\n\n    /* --- Ambient dust --- */\n    #dust {\n      position: fixed;\n      inset: 0;\n      z-index: 3;\n      pointer-events: none;\n    }\n\n    .speck {\n      position: absolute;\n      width: 1.5px;\n      height: 1.5px;\n      background: rgba(232, 204, 138, 0.2);\n      border-radius: 50%;\n    }\n\n    /* --- Typography --- */\n    .content {\n      position: fixed;\n      top: 44%;\n      left: 50%